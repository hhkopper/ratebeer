<h1>Listing users</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Username</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.username, user_path(user) %></td>
	<% if admin_user(current_user) %>
		<td> 
			<% if not user.frozed %>
				<span class="label label-info">frozed</span>
			<% end %>
		</td>
	<% end %>
      </tr>
    <% end %>
  </tbody>
</table>
