<h3>3 most popular breweries</h3>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Brewery</th>
      <th>Average</th>
    </tr>
  </thead>

  <tbody>
    <% @top_breweries.each do |brewery| %>
      <tr>
        <td><%= link_to brewery.name, brewery_path(brewery) %></td>
	<td><%= brewery.average_rating %></td>
      </tr>
    <% end %>
  </tbody>
</table>
