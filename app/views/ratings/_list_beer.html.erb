<h3>3 most popular beers</h3>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Beer</th>
      <th>Average</th>
    </tr>
  </thead>

  <tbody>
    <% @top_beers.each do |beer| %>
      <tr>
        <td><%= link_to beer.name, beer_path(beer) %></td>
	<td><%= beer.average_rating %></td>
      </tr>
    <% end %>
  </tbody>
</table>
