<h3>3 most popular styles</h3>
<table class="table table-hover" >
  <thead>
    <tr>
      <th>Style</th>
      <th>Average</th>
    </tr>
  </thead>

  <tbody>
    <% @top_styles.each do |style| %>
      <tr>
        <td><%= link_to style.name, style_path(style) %></td>
	<td><%= round(style.average_rating) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
