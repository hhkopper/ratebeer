<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @beer_club.name %>
</p>

<p>
  <strong>Founded:</strong>
  <%= @beer_club.founded %>
</p>

<p>
  <strong>City:</strong>
  <%= @beer_club.city %>
</p>

<h3>Members</h3>
<ul>
<% @beer_club.users.each do |user| %>
	<li> <%= link_to user, user_path(user.id) %></li>
<% end %> 
</ul>

<% if current_user %>
	<% unless @beer_club.member(current_user) %>
		<%= form_for(@membership) do |f| %>
			<%= f.hidden_field :beer_club_id %>
			<%= f.submit value:"join the club" %>
		<% end %>
	<% end %>
<% end %>
<br>
<br>
<%= link_to 'Edit', edit_beer_club_path(@beer_club) if current_user %>
